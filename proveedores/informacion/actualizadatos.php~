<script>
   $(document).ready(function() {
      $("#tabs").tabs();
      if ($("#ntcontrib2").is(':checked')) {
			$('#resgran').val("")       	
       	$('#resgran').hide()
       	$('#lbresgran').hide()
       	$('#fecgran').val("")       	
       	$('#fecgran').hide()
       	$('#lbfecgran').hide()
      }          
		
		if ($("#ntcontrib1").is(':checked')) {
			//$('#resgran').val("")       	
       	$('#resgran').show()
       	$('#lbresgran').show()
       	//$('#fecgran').val("")       	
       	$('#fecgran').show()
       	$('#lbfecgran').show()
      }
      
      if ($("#naret2").is(':checked')) {
			$('#resauto').val("")       	
       	$('#resauto').hide()
       	$('#lbresauto').hide()
       	$('#fecauto').val("")       	
       	$('#fecauto').hide()
       	$('#lbfecauto').hide()
      }          
		
		if ($("#naret1").is(':checked')) {       	
       	$('#resauto').show()
       	$('#lbresauto').show()       	
       	$('#fecauto').show()
       	$('#lbfecauto').show()
      }      
      
   });
   
   $("#ntcontrib2").click(function(){
   	if ($("#ntcontrib2").is(':checked')) {
			$('#resgran').val("")       	
       	$('#resgran').hide()
       	$('#lbresgran').hide()
       	$('#fecgran').val("")       	
       	$('#fecgran').hide()
       	$('#lbfecgran').hide()
      }
   })
   
	          
	$("#ntcontrib1").click(function(){	
		if ($("#ntcontrib1").is(':checked')) {
			//$('#resgran').val("")       	
       	$('#resgran').show()
       	$('#lbresgran').show()
       	//$('#fecgran').val("")       	
       	$('#fecgran').show()
       	$('#lbfecgran').show()
      }
  	})
  
  	$("#naret2").click(function(){
 		if ($("#naret2").is(':checked')) {
			$('#resauto').val("")       	
       	$('#resauto').hide()
       	$('#lbresauto').hide()
       	$('#fecauto').val("")       	
       	$('#fecauto').hide()
       	$('#lbfecauto').hide()
      }
  	})          
	
